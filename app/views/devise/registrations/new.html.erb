<h2 class="text-center text-4xl font-bold mb-8 text-gray-200 ">Регистрация</h2>

  <div 
    class="max-w-lg mx-auto p-8 rounded-xl shadow-lg text-white opacity-0 animate-fade-in" 
    style="animation-delay: 0.15s;"
  >

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6", novalidate: true }) do |f| %>

    <div class="mb-6">
      <%= f.label "Ваша почта", class: "block text-lg font-semibold text-gray-300 mb-2"  %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", 
          class: "mt-1 block w-full text-lg rounded-lg border-gray-700 bg-gray-900 text-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if f.object.errors[:email].any?}",
          style: "background-color: #2D2D3A; color: white;" %>
      <% if f.object.errors[:email].any? %>
        <div class="text-red-500 text-sm mt-2">
          <%= f.object.errors[:email].join(', ') %>
        </div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label "Пароль", class: "block text-lg font-semibold text-gray-300 mb-2" %>
      <% if @minimum_password_length %>
        <span class="text-sm text-gray-400">(минимум <%= @minimum_password_length %> символов)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", 
          class: "mt-1 block w-full text-lg rounded-lg border-gray-700 bg-gray-900 text-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if f.object.errors[:password].any?}",
          style: "background-color: #2D2D3A; color: white;" %>
      <% if f.object.errors[:password].any? %>
        <div class="text-red-500 text-sm mt-2">
          <%= f.object.errors[:password].join(', ') %>
        </div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= f.label "Подтвердите пароль", class: "block text-lg font-semibold text-gray-300 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", 
          class: "mt-1 block w-full text-lg rounded-lg border-gray-700 bg-gray-900 text-gray-300 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500 focus:ring-opacity-50 #{'border-red-500' if f.object.errors[:password_confirmation].any?}",
          style: "background-color: #2D2D3A; color: white;" %>
      <% if f.object.errors[:password_confirmation].any? %>
        <div class="text-red-500 text-sm mt-2">
          <%= f.object.errors[:password_confirmation].join(', ') %>
        </div>
      <% end %>
    </div>

    <div class="mt-8">
      <%= f.submit "Регистрация", class: "w-full bg-gray-600 hover:bg-gray-700 text-white text-lg font-semibold py-3 px-5 rounded-lg shadow-lg transition duration-300" %>
    </div>
  <% end %>

  <div class="mt-8 text-center text-white">
    <%= render "devise/shared/links" %>
  </div>
</div>
