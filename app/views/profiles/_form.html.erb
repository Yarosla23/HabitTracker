<%= form_with(model: habit, class: "contents") do |form| %>
  <div class="my-5">
    <%= form.label :username %>
    <%= form.text_field :username, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", style: "background-color: #2D2D3A; color: white;" %>
  </div>

  <div class="my-5">
    <%= form.label :birthday_date %>
    <%= form.text_field :birthday_date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", style: "background-color: #2D2D3A; color: white;" %>
  </div>

  <div class="my-5">
    <%= form.label :options %>
    <%= form.text_field :options, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", style: "background-color: #2D2D3A; color: white;" %>
  </div>


  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
