<%= form_with(model: habit, class: "contents") do |form| %>
  <div class="grid grid-cols-2 gap-10 w-full">
    <div>
      <div class="my-5">
        <%= form.label :username %>
        <%= form.text_field :username, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", style: "background-color: #2D2D3A; color: white;" %>
      </div>

      <div class="my-5">
        <%= form.label :birthday_date %>
        <%= form.date_field :birthday_date, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", style: "background-color: #2D2D3A; color: white;" %>
      </div>

      <div class="my-5">
        <%= form.label :options %>
        <%= form.text_field :options, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full", style: "background-color: #2D2D3A; color: white;" %>
      </div>

    </div>

    <div>
      <h3 class="text-base font-semibold text-gray-400">Достижения</h3>
      <div class="flex items-center bg-gray-800 rounded-lg p-4 mt-2">
        <div class="flex items-center justify-center w-10 h-10 bg-pink-100 rounded-full">
          <span class="text-pink-500 text-lg font-bold">❤</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-bold">1</p>
          <p class="text-sm text-gray-400">Столько привычек достигнуто</p>
        </div>
      </div>

      <div class="flex items-center bg-gray-800 rounded-lg p-4 mt-4">
        <div class="flex items-center justify-center w-10 h-10 bg-pink-100 rounded-full">
          <span class="text-pink-500 text-lg font-bold">~</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-bold">12</p>
          <p class="text-sm text-gray-400">Столько дней вы с нами </p>
        </div>
      </div>

      <div class="flex items-center bg-gray-800 rounded-lg p-4 mt-4">
        <div class="flex items-center justify-center w-10 h-10 bg-pink-100 rounded-full">
          <span class="text-pink-500 text-lg font-bold">Z</span>
        </div>
        <div class="ml-4">
          <p class="text-xl font-bold">228</p>
          <p class="text-sm text-gray-400">Количество задач</p>
        </div>
      </div>
    </div>
  </div>


  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
