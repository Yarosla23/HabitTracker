<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @habit %>

    <div class="flex justify-center gap-4 mt-2">
      <%= link_to "Редактировать привычку", edit_habit_path(@habit), class: "rounded-lg py-3 px-5 bg-gray-600 inline-block font-medium" %>
      <%= link_to "Вернуться к списку привычек", habits_path, class: "rounded-lg py-3 px-5 bg-gray-600 inline-block font-medium" %>
      <%= button_to "Удалить привычку", @habit, method: :delete, class: "rounded-lg py-3 px-5 bg-gray-600 font-medium" %>
    </div>
  </div>
</div>
