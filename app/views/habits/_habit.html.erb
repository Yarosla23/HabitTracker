<div id="<%= dom_id habit %>">
  <div class="max-w-sm mx-auto bg-gray-800 text-white p-5 m-5 rounded-3xl shadow-lg">
    <div class="flex items-center mb-4">
      
      <div class="p-2 rounded-full">
        <svg class="w-16 h-16 <%= status_svg_color(habit.status) %>" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M12 22a10 10 0 100-20 10 10 0 000 20zm0-18a8 8 0 100 16 8 8 0 000-16zm-.75 4.25a.75.75 0 011.5 0v4.5h3a.75.75 0 010 1.5h-3.75a.75.75 0 01-.75-.75V8.25z" clip-rule="evenodd"></path>
        </svg>
      </div>

      <div class="ml-4">
        <h3 class="text-xl font-semibold"><%= habit.title %></h3>
        <p class="text-gray-400"><%= habit.tags %></p>
      </div>
    </div>
      <div class="flex items-center justify-center h-full">
          <% if habit.image.present? %>
              <%= image_tag habit.image, class: "w-76 h-52 rounded-3xl" %>
          <% else %>
            <%= image_tag 'habit_images/abstr.png', class: 'w-76 h-52 rounded-3xl' %>
          <% end %>
      </div>
    <div class="mt-4 text-center">
      <button class="border border-blue-500 text-blue-500 rounded-lg py-2 px-4 hover:text-white hover:bg-blue-500">
        <%= link_to "К привычке", habit, class: "ml-2 rounded-lg py-3 px-5 inline-block font-medium" %>
      </button>
    </div>
  </div>
</div>
