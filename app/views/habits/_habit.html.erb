<div id="<%= dom_id habit %>">

<div class="max-w-sm mx-auto bg-gray-800 text-white p-5 m-5 rounded-3xl shadow-lg">
  <div class="flex items-center mb-4">
    <div class="p-3 rounded-full ">
    <svg class="w-16 h-16 <%= status_svg_color(habit.status) %>" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1.414-10.414a1 1 0 00-1.414 0L9 8.586V5a1 1 0 10-2 0v6a1 1 0 001 1h6a1 1 0 100-2H8.586l1.293-1.293a1 1 0 000-1.414z" clip-rule="evenodd"></path>
    </svg>

    </div>
    <div class="ml-4">
      <h3 class="text-xl font-semibold"> <%= habit.title %></h3>
      <p class="text-gray-400">Краткое описание</p>
       <h3 class="text-xl font-semibold"> <%= habit.status %></h3>
    </div>
  </div>
 
    <img src="https://via.placeholder.com/400x300" alt="Placeholder Image" class="w-full h-auto rounded-3xl p-2">
  <div class="mt-4 text-center">
    <button class="border border-blue-500 text-blue-500 rounded-lg py-2 px-4">        
        <%= link_to "К привычке", habit, class: "ml-2 rounded-lg py-3 px-5  inline-block font-medium" %>
    </button>
  </div>
</div>

</div>
