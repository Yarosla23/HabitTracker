<div id="<%= dom_id habit %>" class="p-4">
  <div class="max-w-md mx-auto bg-gray-800 text-white p-6 rounded-3xl shadow-lg transform transition-transform hover:scale-105 md:p-8">
    <div class="flex flex-col items-center md:flex-row md:items-center md:space-x-4 mb-6">
      <div class="p-3 rounded-full bg-gray-700 mb-4 md:mb-0">
        <svg class="w-10 h-10 <%= status_svg_color(habit.status) %>" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path fill-rule="evenodd" d="M12 22a10 10 0 100-20 10 10 0 000 20zm0-18a8 8 0 100 16 8 8 0 000-16zm-.75 4.25a.75.75 0 011.5 0v4.5h3a.75.75 0 010 1.5h-3.75a.75.75 0 01-.75-.75V8.25z" clip-rule="evenodd"></path>
        </svg>
      </div>

      <div class="text-center md:text-left">
        <h3 class="text-xl font-bold leading-tight truncate"><%= habit.title %></h3>
        <p class="text-gray-400 text-sm"><%= habit.tags %></p>
      </div>
    </div>

    <div class="overflow-hidden rounded-3xl">
      <% if habit.image.present? %>
        <%= image_tag habit.image, class: "w-full h-48 object-cover" %>
      <% else %>
        <%= image_tag 'habit_images/abstr.png', class: 'w-full h-48 object-cover' %>
      <% end %>
    </div>

    <div class="mt-6 text-center">
      <%= link_to "К привычке", habit, class: "block w-full bg-blue-800 text-white font-medium py-3 rounded-lg hover:bg-blue-500 transition-colors" %>
    </div>
  </div>
</div>
