<div class="w-full  text-white" >
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Habits" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Habits</h1>
    <%= link_to "Создать привычку", new_habit_path, class: "rounded-lg py-3 px-5 bg-blue-600  block font-medium" %>
  </div>

  <div id="habits" class="min-w-full">
    <% @habits.each do |habit| %>
      <%= render habit %>
      <p>
        <%= link_to "Show this habit", habit, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
